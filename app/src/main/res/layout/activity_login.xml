<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textColor="@color/blue"
        android:textSize="45sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/pretendard_extra_bold"
        />

    <EditText
        android:id="@+id/login_email_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/login_tv"
        android:layout_marginTop="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="이메일"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/blue"
        android:textSize="17sp"
        android:background="@drawable/edit_round"
        android:fontFamily="@font/pretendard_medium"
        />

    <EditText
        android:id="@+id/login_password_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/login_email_et"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="비밀번호"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:inputType="textPassword"
        android:textColorHint="@color/blue"
        android:textSize="17sp"
        android:background="@drawable/edit_round"
        android:fontFamily="@font/pretendard_medium"
        />

    <android.widget.Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/login_password_et"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="이메일로 로그인"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:background="@drawable/button_round"
        android:fontFamily="@font/pretendard_medium"
        />

    <LinearLayout
        android:id="@+id/linear_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/login_btn"
        app:layout_constraintStart_toStartOf="@id/login_btn"
        app:layout_constraintEnd_toEndOf="@id/login_btn"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아직 찾아보SUU 회원이 아니신가요?"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:textSize="13sp"
            android:fontFamily="@font/pretendard_semi_bold"
            />

        <TextView
            android:id="@+id/membership_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:layout_marginStart="10dp"
            android:textColor="@color/blue"
            android:textSize="13sp"
            android:fontFamily="@font/pretendard_extra_bold"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/linear_1"
        app:layout_constraintStart_toStartOf="@id/login_btn"
        app:layout_constraintEnd_toEndOf="@id/login_btn"
        android:layout_marginTop="40dp">

        <View
            android:layout_width="135dp"
            android:layout_height="1dp"
            android:background="#9AA5B1"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     또는     "
            android:textColor="#808080"
            android:fontFamily="@font/pretendard_semi_bold"
            android:textSize="13sp"
            />

        <View
            android:layout_width="135dp"
            android:layout_height="1dp"
            android:background="#9AA5B1"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <ImageButton
        android:id="@+id/login_google_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/linear_2"
        app:layout_constraintStart_toStartOf="@id/login_btn"
        app:layout_constraintEnd_toEndOf="@id/login_btn"
        android:layout_marginTop="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:scaleType="fitCenter"
        android:background="#00ff0000"
        android:src="@drawable/login_google"
        />

</androidx.constraintlayout.widget.ConstraintLayout>