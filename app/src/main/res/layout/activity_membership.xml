<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MembershipActivity">

    <TextView
        android:id="@+id/membership_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:textSize="45sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/pretendard_extra_bold"
        />

    <EditText
        android:id="@+id/membership_email_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/membership_tv"
        android:layout_marginTop="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="이메일을 입력하세요"
        android:textSize="17sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/blue"
        android:background="@drawable/edit_round"
        android:fontFamily="@font/pretendard_medium"
        />

    <EditText
        android:id="@+id/membership_password_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/membership_email_et"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="비밀번호를 입력하세요"
        android:textSize="17sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:inputType="textPassword"
        android:textColorHint="@color/blue"
        android:background="@drawable/edit_round"
        android:fontFamily="@font/pretendard_medium"
        />

    <EditText
        android:id="@+id/membership_password_check_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/membership_password_et"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="비밀번호를 한 번 더 입력하세요"
        android:textSize="17sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:inputType="textPassword"
        android:textColorHint="@color/blue"
        android:background="@drawable/edit_round"
        android:fontFamily="@font/pretendard_medium"
        />

    <android.widget.Button
        android:id="@+id/membership_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/membership_password_check_et"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="회원가입"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:background="@drawable/button_round"
        android:fontFamily="@font/pretendard_medium"
        />

</androidx.constraintlayout.widget.ConstraintLayout>