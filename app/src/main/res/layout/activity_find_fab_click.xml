<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_find_fab_click"
    android:background="@color/white"
    tools:context=".FindFabClickActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true"
        tools:ignore="SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-276dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/find_fab_click_back_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="45dp"
                android:background="#00FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/back_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/find_fab_click_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/pretendard_extra_bold"
                android:text="찾아가세요"
                android:textColor="@color/blue"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/find_fab_click_warning_iv"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/warning_fab_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/find_fab_click_title_tv" />

            <TextView
                android:id="@+id/find_fab_click_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/pretendard_medium"
                android:text="물품명"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/find_fab_click_warning_iv"
                app:layout_constraintTop_toBottomOf="@id/find_fab_click_warning_iv" />

            <EditText
                android:id="@+id/find_fab_click_name_et"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_fab_click_round"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/find_fab_click_name_tv" />

            <TextView
                android:id="@+id/find_fab_click_location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/pretendard_medium"
                android:text="습득장소"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/find_fab_click_name_et"
                app:layout_constraintTop_toBottomOf="@id/find_fab_click_name_et" />

            <Spinner
                android:id="@+id/find_fab_click_location_sp"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spinner_background"
                app:layout_constraintStart_toStartOf="@id/find_fab_click_location_tv"
                app:layout_constraintTop_toBottomOf="@id/find_fab_click_location_tv" />

            <TextView
                android:id="@+id/find_fab_click_location_detail_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/pretendard_medium"
                android:text="상세 습득장소"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/find_fab_click_location_tv"
                app:layout_constraintTop_toBottomOf="@id/find_fab_click_location_sp" />

            <EditText
                android:id="@+id/find_fab_click_location_detail_et"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_fab_click_round"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/find_fab_click_location_detail_tv" />

            <TextView
                android:id="@+id/find_fab_click_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/pretendard_medium"
                android:text="습득일자"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/find_fab_click_location_detail_et"
                app:layout_constraintTop_toBottomOf="@id/find_fab_click_location_detail_et" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/find_fab_click_date_btn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_round"
                android:fontFamily="@font/pretendard_medium"
                android:text="날짜선택"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/find_fab_click_date_tv"
                app:layout_constraintTop_toBottomOf="@id/find_fab_click_date_tv" />

            <TextView
                android:id="@+id/find_fab_click_date_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:visibility="invisible"
                app:layout_constraintStart_toEndOf="find_fab_click_date_btn"
                app:layout_constraintTop_toTopOf="find_fab_click_date_btn"
                />

            <TextView
                android:id="@+id/find_fab_click_more_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/pretendard_medium"
                android:text="세부사항"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/find_fab_click_date_tv"
                app:layout_constraintTop_toBottomOf="@id/find_fab_click_date_btn" />

            <EditText
                android:id="@+id/find_fab_click_more_et"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_fab_click_round"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/find_fab_click_more_tv" />

            <TextView
                android:id="@+id/find_fab_click_img_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/pretendard_medium"
                android:text="이미지 추가"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/find_fab_click_more_et"
                app:layout_constraintTop_toBottomOf="@id/find_fab_click_more_et" />

            <ImageButton
                android:id="@+id/find_fab_click_img_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/plus_img"
                app:layout_constraintStart_toStartOf="@id/find_fab_click_img_tv"
                app:layout_constraintTop_toBottomOf="@id/find_fab_click_img_tv" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/find_fab_click_upload_btn"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@drawable/button_round"
                android:fontFamily="@font/pretendard_medium"
                android:text="업로드"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@id/find_fab_click_more_et"
                app:layout_constraintTop_toBottomOf="@id/find_fab_click_img_tv" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/my_page_map"
                android:visibility="invisible"
                app:layout_constraintTop_toBottomOf="@id/find_fab_click_upload_btn" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>